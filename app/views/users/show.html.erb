<div class="vh-100 vw-100 bg-image">

<div class="container pt-5">
  <h1 class="display-3">Show tenant</h1>
</div>

<div class="mt-3" data-controller="hello">
  <table class="table table-bordered mx-auto w-50">
    <thead>
    <tr>
      <th scope="col"><span class="lead font-weight-bold">View</span></th>
    </tr>
    </thead>
    <tbody>
      <tr data-action="click->hello#displayModal">
        <td>
            <button class="btn btn-primary"><%= full_name(@user.name, @user.surname) %></button>
        </td>

        <div id="myModal" class="modal" data-target="hello.modal">

          <!-- Modal content -->
          <div class="modal-content w-50 mx-auto p-4">
            <div>
              <button class="mb-4 d-block float-right btn btn-danger rounded-0" data-action="click->hello#closeModal">&times;</button>
            </div>
            <div class="modal-body">
              <h3 class="card-title">Apartment number: <%= @user.id %></h3>
              <ul class="list-group mt-2">
                <li class="list-group-item"><span class="font-weight-bolder">Name: </span><%= @user.name %></li>
                <li class="list-group-item"><span class="font-weight-bolder">Surname: </span><%= @user.surname %></li>
              </ul>
            </div>
          </div>
        </div>
      </tr>
    </tbody>
  </table>
</div>

</div>